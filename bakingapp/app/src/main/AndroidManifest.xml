<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gabrielmoro.baking_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main_screen.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main_screen.recipe_detail_screen.RecipeDetailActivity"
            android:parentActivityName=".ui.main_screen.MainActivity" />
        <activity
            android:name=".ui.main_screen.recipe_detail_screen.recipe_step_detail_screen.RecipeStepDetailActivity"
            android:parentActivityName=".ui.main_screen.recipe_detail_screen.RecipeDetailActivity" />
    </application>

</manifest>