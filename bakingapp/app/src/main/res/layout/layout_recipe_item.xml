<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardHeight"
    app:cardCornerRadius="@dimen/cardCornerRagius"
    android:layout_margin="@dimen/marginCard"
    app:cardElevation="@dimen/cardELevation">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rlCardViewInternalLayoutHeight">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ivCardViewImageHeaderHeight"
            android:scaleType="centerCrop"
            android:src="@drawable/recipes_image_place_holder" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tvCardViewTitleHeight"
            style="@style/TextAppearance.AppCompat.Large.CardTitle"
            android:layout_alignParentBottom="true"
            tools:text="Nutella Pie" />
    </RelativeLayout>
</android.support.v7.widget.CardView>