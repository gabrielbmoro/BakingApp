<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.CardTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.CardTitleCenter" parent="TextAppearance.AppCompat.Large">
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.CardSubTitleCenter" parent="TextAppearance.AppCompat.Large">
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.Center" parent="TextAppearance.AppCompat.Display1">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.Center.Bold" parent="TextAppearance.AppCompat.Display1.Center">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
